<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Wecome to the YelpCamp</h1>
      <p>View campgrounds from all over the world</p>

      <p>
        <a href="/"><button type="button" class="btn btn-primary">
            Home
          </button></a>
        <a href="/campgrounds/new"><button type="button" class="btn btn-primary">
            New campground
          </button></a>
      </p>
  </header>

<h3 class="text-center">Our most Popular Campgrounds</h3><br>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <%campgrounds.forEach(function(campground){%>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%=campground.image%>" alt="" />
        <div class="caption">
          <h4><%=campground["name"] %></h4>
        </div>
      </div>
    </div>
        <%})%> 
    </div>
</div>


<% include partials/footer %>